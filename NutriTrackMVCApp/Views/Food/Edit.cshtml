@model NutriTrackMVCApp.Models.Food

@{
    ViewData["Title"] = "Edit Food";
}

<h2>Edit Food</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" style="width: 50%; margin: 0 auto;">
    <input type="hidden" asp-for="Id" />

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Name" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Name" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Name" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="FoodGroup" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="FoodGroup" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="FoodGroup" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Price" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Price" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Price" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Weight" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Weight" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Weight" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="ImageURL" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input type="file" name="imageFile" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="ImageURL" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Energy" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Energy" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Energy" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Fat" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Fat" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Fat" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="SaturatedFat" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="SaturatedFat" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="SaturatedFat" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Carbohydrates" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Carbohydrates" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Carbohydrates" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Sugar" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Sugar" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Sugar" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Protein" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Protein" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Protein" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label asp-for="Salt" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
        <input asp-for="Salt" class="form-control" style="width: 100%; padding: 8px; box-sizing: border-box;" />
        <span asp-validation-for="Salt" class="text-danger" style="color: red; display: block; margin-top: 5px;"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
